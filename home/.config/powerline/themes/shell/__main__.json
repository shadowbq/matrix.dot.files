{
	"segment_data": {
		"hostname": {
			"args": {
				"only_if_ssh": true
			}
		},
		"cwd": {
			"args": {
				"dir_limit_depth": 3
			}
		},
		"gitstatus": {
			"args": { 
				"formats": {
					"branch": "\ue0a0 {}",
					"tag": " ★ {}",
					"behind": " ↓ {}",
					"ahead": " ↑ {}",
					"staged": " ● {}",
					"unmerged": " ✖ {}",
					"changed": " ✚ {}",
					"untracked": " … {}",
					"stashed": " ⚑ {}"
				}
			}
		}
	}
	
}
