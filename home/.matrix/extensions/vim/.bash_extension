###########################
# VIM Customization
# - MDF extension
###########################
# shellcheck shell=bash
#
###########################
function _matrix_vim-init() {
  vim-symlink-alts
}

function vim-symlink-alts() {
  command -v vim >/dev/null 2>&1
  if [ $? -eq 0 ]; then
    alias vi=$(command -v vim)
    if [ "$EDITOR" == "vi" ]; then
      export EDITOR="vim"
    fi
  fi
}

# sudo vi/vim
function svi() {
  sudo vi $@
}
function svim() {
  sudo vim $@
}
