###########################
export PATH="$HOME/.pyenv/bin:$HOME/.local/bin:$PATH"
export PATH="$HOME/.poetry/bin:$PATH"
command -v pyenv >/dev/null 2>&1 || { echo_warn "[PYENV WARNING] No python pyenv found. See README.python.md"; }
if [ $? -eq 0 ]; then 
  eval "$(pyenv init -)"
  eval "$(pyenv virtualenv-init -)"
fi
